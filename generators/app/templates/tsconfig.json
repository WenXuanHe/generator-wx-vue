{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "baseUrl":"/",
        "paths": {
            "$components/*": ["src/client/components/*"],
            "$router/*": ["src/client/router/*"],
            "$store/*": ["src/client/store/*"],
            "$utils/*": ["src/client/utils/*"],
            "$views/*": ["src/client/views/*"],
            "$apis/*": ["src/client/apis/*"]
        }
    },
    "include": [
        "./src/client/**/*"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*"
    ]
}
